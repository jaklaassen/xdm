  "$id": "https://ns.adobe.com/xdm/campaign/activity",
  "$schema": "http://json-schema.org/draft-06/schema#",
  "title": "Marketing Activity",
  "description": "Activities are the deliveries of content and experience to people",
  "meta:extensible": true,
  "type": "object",
  "meta:abstract": false,
  "definitions": {
    "activity": {
      "properties": {
        "@id": {
          "type": "string",
          "title": "ID",
          "description": "The activity ID."
        },
        "xdm:title": {
          "type": "string",
          "title": "Title",
          "description": "The title of the activity.",
        },
        "xdm:startDate": {
          "type": "string",
          "format": "date-time",
          "title": "Start Date",
          "description": "The start date of the activity."
        },
        "xdm:endDate": {
          "type": "string",
          "format": "date-time",
          "title": "End Date",
          "description": "The end date of the activity."
        },
        "xdm:initiative": {
          "type": "string",
          "meta:descriptors": [
            {
              "@type": "xdm:manyToOne",
              "xdm:destinationSchema": "https://ns.adobe.com/xdm/campaign/initiative",
              "xdm:destinationProperty": "@id"
            }
          ]
        }
      }
    }
  },
  "allOf": [
    {
      "$ref": "#/definitions/activity"
    }
  ],
  "required": [
    "@id"
  ],
  "meta:status": "experimental"
}