            "type": "object",
            "properties": {
              "xdm:field": {
                "type": "string",
                "meta:descriptors": [
                  {
                    "@type": "xdm:manyToMany",
                    "xdm:destinationSchema": "https://ns.adobe.com/xdm/campaign/field",
                    "xdm:destinationProperty": "@id"
                  }
                ]
              },
              "xdm:required": {
                "type": "boolean"
              }
            }
          }
        }
      }
    }
  },
  "allOf": [
    {
      "$ref": "#/definitions/template"
